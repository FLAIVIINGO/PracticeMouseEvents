<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane
        fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml">
    <center>
        <AnchorPane fx:id="graph" style="-fx-background-color:
            linear-gradient(#4568DC, #B06AB3),
            radial-gradient(center 50% 50%, radius 50%, #FFFFFF33, #00000033);"
            onMousePressed="#onGraphPressed"
            onDragDetected="#onGraphDragDetected"
            onMouseDragged="#onGraphDragged"
            onMouseReleased="#onGraphReleased"/>
    </center>
</BorderPane>
